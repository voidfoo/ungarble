{
  "manifest_version": 3,
  "name": "Fix broken CJK or other mojibake",
  "version": "1.1",
  "description": "See all transformations and pick the one you want",

  "icons": {
    "128": "icon.jpg"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Transform text"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Open Text Transformer Preview"
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "text-transformer-preview@example.com",
      "strict_min_version": "109.0"
    }
  }
}
